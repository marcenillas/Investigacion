{
  "name": "SielconPayTerminal",
  "version": "1.0.0",
  "description": "Terminal de Venta de Tito",
  "main": "main.js",
  "scripts": {
    "electron-trace": "electron . --trace-warnings --config=config/config.development.json",
    "start": "electron . --config=config/config.development.json",
    "pack": "electron-packager . --icon=icons/icon.ico --platform=win32 --arch=x64 --out=dist --overwrite && npm run copy-config && npm run copy-Exe",
    "copy-config": "xcopy /E /I \"config\" \"dist\\SielconPayTerminal-win32-x64\\config\"",
    "copy-Exe": "xcopy /E /I \"Exe\" \"dist\\SielconPayTerminal-win32-x64\"",
    "dist": "npm run pack && electron-builder"
  },
  "author": "Sielcon",
  "license": "ISC",
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "electron": "^28.2.6",
    "electron-builder": "^25.1.8",
    "electron-debug": "^3.2.0"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bootstrap": "^5.3.2",
    "electron-pos-printer": "^1.3.6",
    "macaddress": "^0.5.3",
    "qrcode": "^1.5.4",
    "serialport": "^12.0.0",
    "sweetalert2": "^11.10.6",
    "winston": "^3.11.0",
    "written-number": "^0.11.1",
    "yargs": "^17.7.2"
  },
  "build": {
    "appId": "com.sielcon.pay.terminal",
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico",
      "uninstallDisplayName": "SielconPayTerminal",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
